<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:background="@drawable/home_item_shape"
    android:layout_height="match_parent">
<TextView
    android:visibility="invisible"
    android:id="@+id/home_item_tv_number"
    android:textSize="@dimen/bite_size"
    android:text="4"
    android:textColor="#0c800c"
    android:layout_alignParentRight="true"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/home_item_iv"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/home_item_tv_name"
            android:layout_centerHorizontal="true"
            android:text="111"
            android:textSize="@dimen/bite_size"
            android:layout_below="@id/home_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/home_item_tv_name"
            android:layout_width="33dp"
            android:layout_height="10dp" />
    </RelativeLayout>
</RelativeLayout>