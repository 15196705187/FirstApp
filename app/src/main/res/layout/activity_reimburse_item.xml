<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/head_title"
        android:id="@+id/reiburse_item_head"/>
    <TextView
        android:layout_below="@id/reiburse_item_head"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_background"/>
    <RelativeLayout
        android:id="@+id/reimburse_item_rl"
        android:background="@color/login_background"
        android:layout_below="@id/reiburse_item_head"
        android:layout_marginTop="1dp"
        android:layout_width="100dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/reimburse_item_rl_search"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@color/withe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:gravity="center"
                android:id="@+id/reimburse_item_et_search"
                android:background="@drawable/mine_item_shape"
                android:hint="输入关键字"
                android:textSize="@dimen/bite_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/reimburse_item_tv_search"
            android:background="@color/withe"
            android:layout_below="@id/reimburse_item_rl_search"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:text="搜索"
            android:textSize="@dimen/bite_size"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/reimburse_item_tv_search"
            android:text="111"
            android:gravity="center_horizontal"
            android:id="@+id/reimburse_item_tv_name"
            android:textSize="@dimen/bite_size"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<ListView
    android:id="@+id/reimburse_item_lv"
    android:layout_below="@id/reiburse_item_head"
    android:layout_toRightOf="@id/reimburse_item_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</ListView>
</RelativeLayout>